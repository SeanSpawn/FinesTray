IDD_DIALOG_SETTINGS DIALOGEX 0, 0, 418, 290
STYLE DS_SETFONT | DS_MODALFRAME | DS_FIXEDSYS | DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "MinTray Settings"
FONT 8, "MS Shell Dlg", 400, 0, 0x1
BEGIN
    LTEXT           "Minimize Hotkey",IDC_STATIC,10,9,52,8
    EDITTEXT        IDC_HOTKEY_MINIMIZE,61,7,349,14, ES_AUTOHSCROLL | ES_LOWERCASE | WS_TABSTOP
    LTEXT           "Restore Hotkey",IDC_STATIC,10,27,52,8
    EDITTEXT        IDC_HOTKEY_RESTORE,61,25,349,14, ES_AUTOHSCROLL | ES_LOWERCASE | WS_TABSTOP
    LTEXT           "Override Modifier",IDC_STATIC,10,45,52,8
