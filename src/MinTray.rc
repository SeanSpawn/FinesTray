    PUSHBUTTON      "Add",IDC_AUTO_TRAY_ITEM_ADD,110,241,50,12
    PUSHBUTTON      "Delete",IDC_AUTO_TRAY_ITEM_DELETE,160,241,50,12
    PUSHBUTTON      "Spy",IDC_AUTO_TRAY_ITEM_SPY,360,241,50,12

    PUSHBUTTON      "Cancel",IDCANCEL,305,268,50,14
    DEFPUSHBUTTON   "OK",IDOK,359,269,50,14
END

VS_VERSION_INFO VERSIONINFO
