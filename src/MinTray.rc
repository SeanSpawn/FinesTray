    LTEXT           "Executable",IDC_STATIC,10,190,52,8
    EDITTEXT        IDC_AUTO_TRAY_EDIT_EXECUTABLE,61,188,349,14, ES_AUTOHSCROLL | WS_TABSTOP
    LTEXT           "Window Class",IDC_STATIC,10,208,52,8
