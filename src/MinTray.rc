    LTEXT           "Poll Interval",IDC_STATIC,10,63,52,8
    EDITTEXT        IDC_POLL_INTERVAL,61,61,349,14, ES_AUTOHSCROLL | ES_NUMBER | WS_TABSTOP
    LTEXT           "Auto-tray windows",IDC_STATIC,10,83,51,8
